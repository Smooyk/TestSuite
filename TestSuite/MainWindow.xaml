<Window x:Class="TestSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestSuite" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="294*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listOfTests" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="388" Grid.ColumnSpan="2" MouseDoubleClick="listOfTests_MouseDoubleClick"/>
        <Button x:Name="runButton" Content="Run Test" Grid.Column="1" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" Width="75" MouseDoubleClick="runButton_MouseDoubleClick" Click="runButton_Click"/>
        <Button x:Name="rubAllTestButton" Content="Run All" Grid.Column="1" HorizontalAlignment="Left" Margin="126,32,0,0" VerticalAlignment="Top" Width="75" Click="rubAllTestButton_Click"/>
        <Button x:Name="closeButton" Content="Close" Grid.Column="1" HorizontalAlignment="Left" Margin="126,54,0,0" VerticalAlignment="Top" Width="75" Click="closeButton_Click"/>
        <CheckBox x:Name="closeConsole" Content="Close Console&#xD;&#xA;after complete" Grid.Column="1" HorizontalAlignment="Left" Margin="109,254,0,0" VerticalAlignment="Top" Height="38" Width="111"/>

    </Grid>
</Window>
